%
% MS.sty
% Style file to set up title and signature pages for MS thesis.
% Do not edit this file unless there is an absolute need, and/or in the
% absence of knowledge of LaTeX style files.

%
% Title page
\def\titlepage{%
  \sloppy
  \pagenumbering{roman}
  \pagestyle{plain}
  \thispagestyle{empty}%
  \null\vskip.50in%

  \begin{center}
    \uppercase\expandafter{\@title}
  \end{center}

  \vfill
  \begin{center}
    By\\
    \expandafter{\@author}
  \end{center}

  \vspace{\fill}
  \begin{center}
    A THESIS\\
    Submitted in partial fulfillment of the requirements for the degree of\\
    MASTER OF SCIENCE\\
    In \expandafter{\@program}
  \end{center}

  \begin{center}
    \uppercase\expandafter{\@university}\\
    \@year
  \end{center}

  \vfill
  \begin{center}
    \copyright\ \@year\ \@author\
  \end{center}
  \newpage
}

%
% Signature page
\def\signaturepage{%
  \cleartooddpage[\thispagestyle{empty}]
  \thispagestyle{empty}%
  This thesis has been approved in partial fulfillment of the requirements 
  for the Degree of MASTER OF SCIENCE in \expandafter{\@program}.

  \vskip 0.50in
  \begin{flushright}
    \setstretch{1.00}%
    \ifx \@department \@empty
      \expandafter{\@school}
    \else
      \expandafter{\@department}
    \fi
  \end{flushright}

  \hspace{0.68in} %
  \begin{tabular}{rl}%
    \ifx \@coadvisor \@empty 
      Thesis Advisor:    & \hspace{0.10in}\textsl{\expandafter{\@primaryadvisor}}\\\\
    \else
      Thesis Co-advisor: & \hspace{0.10in}\textsl{\expandafter{\@primaryadvisor}}\\\\
      Thesis Co-advisor: & \hspace{0.10in}\textsl{\expandafter{\@coadvisor}}\\\\
    \fi

    \ifx \@advcommone \@empty \else
      Committee Member:  & \hspace{0.10in}\textsl{\expandafter{\@advcommone}}\\\\
    \fi

    \ifx \@advcommtwo \@empty \else
      Committee Member:  & \hspace{0.10in}\textsl{\expandafter{\@advcommtwo}}\\\\
    \fi

    \ifx \@advcommthree \@empty \else
      Committee Member:  & \hspace{0.10in}\textsl{\expandafter{\@advcommthree}}\\\\
    \fi

    \ifx \@advcommfour \@empty \else
      Committee Member:  & \hspace{0.10in}\textsl{\expandafter{\@advcommfour}}\\\\ 
    \fi

    \ifx \@departmentchair \@empty 
      School Dean:       & \hspace{0.10in}\textsl{\expandafter{\@schooldean}}\\\\
    \else
      Department Chair:  & \hspace{0.10in}\textsl{\expandafter{\@departmentchair}}\\\\
    \fi

  \end{tabular}%
  \renewcommand{\baselinestretch}{\lineheight}%
  \newpage
}
